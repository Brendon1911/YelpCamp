<% include ../partials/header %>

<div class="row">
  <div class="col-md-4">
    <h1><%= user.firstName + " " + user.lastName %></h1>
    <div class="thumbnail">
      <img src="<%= user.avatar %>" alt="user profile image">
      <div class="caption">
        Username: <%= user.username %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <h3><%= user.username %>'s Submitted Campgrounds:</h3>
    <ul class="list-group">
      <% campgrounds.forEach(function(campground) { %>
        <li class="list-group-item"><a class="btn btn-primary" href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
      <% }); %>
    </ul>
  </div>
</div>

<% include ../partials/footer %>